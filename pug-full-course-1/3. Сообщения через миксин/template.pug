-
    let data = [
        {
            name: 'Радько Петр',
            time: '20 Марта 2021',
            msg: 'Люблю программирование и математику!<br>Гениями не рождаются, ими становятся!'
        },
        {
            name: 'Николай Нагибин',
            time: '4 Апреля 2019',
            msg: 'Как этой штукой вообще пользоваться?!'
        },
        {
            name: 'Иванов Иван',
            time: '10 Мая 2016',
            msg: 'Люблю шутить про мамаш!', banned: true
        }
    ];

mixin message(data)
    .message(class={ banned: data.banned })
        img.avatar(src=`https://picsum.photos/seed/${data.name}/64`)
        .info
            .head
                a.name(href="htts://vk.com/math.head")= data.name
                .time= data.time
            .content!= data.msg  

h2 Сообщения

each dataItem in data
    +message(dataItem)
    
h2 Реверсивные сообщения

each dataItem in data.reverse()
    +message(dataItem)